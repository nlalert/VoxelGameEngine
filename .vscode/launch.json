{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Sandbox",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/bin/Sandbox",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/build/bin",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "CMake Build",
            "miDebuggerPath": "gdb",
            "windows": {
                "program": "${workspaceFolder}/build/bin/Debug/Sandbox.exe",
                "miDebuggerPath": "gdb.exe"
            }
        }
    ]
}